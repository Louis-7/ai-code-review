    "build:action": "ncc build ./src/action.ts -o ./action",
    "build:function": "ncc build ./serverless/azure-function/index.js -o ./azure-function && cp ./serverless/azure-function/function.json ./azure-function"
  },
  "dependencies": {
    "@probot/adapter-azure-functions": "^1.0.23",
    "@probot/adapter-github-actions": "^3.1.3",
    "minimatch": "^9.0.0",
    "openai": "^4.56.0",
    "probot": "^12.2.4",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@octokit/types": "^9.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@vercel/ncc": "^0.36.1",
    "dotenv": "^16.4.5",
    "jest": "^29.0.0",
    "nock": "^13.0.5",
    "nodemon": "^2.0.22",
    "smee-client": "^1.2.2",
    "ts-jest": "^29.0.0",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 18.0.0"
  }
