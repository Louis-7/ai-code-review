  "homepage": "https://github.com/Louis-7/ai-code-review",
  "keywords": [
    "probot",
    "chatGPT",
    "AI"
  ],
  "scripts": {
    "build": "tsc",
    "start": "probot run ./lib/app/index.js",
    "dev": "nodemon --exec \"npm start\"",
